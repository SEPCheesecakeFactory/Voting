<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.text.*?>

<StackPane xmlns:fx="http://javafx.com/fxml"
           fx:controller="Client.Login.LoginViewController"
           style="-fx-background-color:#eeeeee;">

    <VBox spacing="20" alignment="CENTER" maxWidth="300">
        <Label text="Welcome to Voting app" style="-fx-font-size:18px;"/>
        <Label text="Username"/>

        <TextField fx:id="usernameField"
                   promptText="Enter username"
                   maxWidth="200"/>

        <HBox spacing="20" alignment="CENTER">
            <Button fx:id="loginButton" text="Login"
                    onAction="#onLoginClicked" prefWidth="100"/>
            <Button fx:id="registerButton" text="Register"
                    onAction="#onRegisterClicked" prefWidth="100"/>
        </HBox>

        <Text fx:id="messageText" fill="red"/>
    </VBox>
</StackPane>
